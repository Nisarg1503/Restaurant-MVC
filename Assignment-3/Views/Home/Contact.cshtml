@{
    ViewBag.Title = "Contact";
}
<style>input,
select,
textarea {
    max-width: 620px;
}</style>
<div>

    <div class="container">
        <div class="row">
            <div class="col-md-offset-4 col-md-8">
                <h1>Contact Us</h1>
            </div>
        </div>
        <div class="row">
            <div class="col-md-4">
                <div class="panel panel-primary">
                    <div class="panel-heading">
                        <h3 class="panel-title">Contact Info</h3>
                    </div>
                    <div class="panel-body">
                        <address>
                            <strong>Jinal Patel</strong><br>
                            Johnson Drive<br>
                            Barrie, ON L4M 6T2<br>
                            <abbr title="Phone">Tel:</abbr>
                            (647)-000-0000
                        </address>
                    </div>
                </div>

            </div>
            <div class="col-md-6">

                <div class="form-group">
                    <label class="control-label" for="form-group-input">First Name</label>
                    <input name="ctl00$MainContent$FirstNameTextBox" type="text" id="MainContent_FirstNameTextBox" class="form-control" placeholder="First Name" required="true" />
                    <span data-val-controltovalidate="MainContent_FirstNameTextBox" data-val-focusOnError="t" data-val-errormessage="First Name is Required!" data-val-display="Dynamic" id="MainContent_RequiredFieldValidator1" class="alert-danger" data-val="true" data-val-evaluationfunction="RequiredFieldValidatorEvaluateIsValid" data-val-initialvalue="" style="display:none;">First Name is Required!</span>
                </div>
                <div class="form-group">
                    <label class="control-label" for="LastNameTextBox">Last Name</label>
                    <input name="ctl00$MainContent$LastNameTextBox" type="text" id="MainContent_LastNameTextBox" class="form-control" placeholder="Last Name" required="true" />
                    <span data-val-controltovalidate="MainContent_LastNameTextBox" data-val-focusOnError="t" data-val-errormessage="Last Name is Required!" data-val-display="Dynamic" id="MainContent_RequiredFieldValidator2" class="alert-danger" data-val="true" data-val-evaluationfunction="RequiredFieldValidatorEvaluateIsValid" data-val-initialvalue="" style="display:none;">Last Name is Required!</span>
                </div>
                <div class="form-group">
                    <label class="control-label" for="EmailTextBox">Email</label>
                    <input name="ctl00$MainContent$EmailTextBox" type="email" id="MainContent_EmailTextBox" class="form-control" placeholder="Email" required="true" />
                    <span data-val-controltovalidate="MainContent_EmailTextBox" data-val-focusOnError="t" data-val-errormessage="Email is Required!" data-val-display="Dynamic" id="MainContent_RequiredFieldValidator3" class="alert-danger" data-val="true" data-val-evaluationfunction="RequiredFieldValidatorEvaluateIsValid" data-val-initialvalue="" style="display:none;">Email is Required!</span>
                </div>
                <div class="form-group">
                    <label class="control-label" for="ContactNumberTextBox">Contact Number</label>
                    <input name="ctl00$MainContent$ContactNumberTextBox" type="tel" id="MainContent_ContactNumberTextBox" class="form-control" placeholder="Contact Number" required="true" />
                    <span data-val-controltovalidate="MainContent_ContactNumberTextBox" data-val-focusOnError="t" data-val-errormessage="Contact Number is Required!" data-val-display="Dynamic" id="MainContent_RequiredFieldValidator4" class="alert-danger" data-val="true" data-val-evaluationfunction="RequiredFieldValidatorEvaluateIsValid" data-val-initialvalue="" style="display:none;">Contact Number is Required!</span>
                </div>
                <div class="form-group">
                    <label class="control-label" for="MessageTextBox">Your Message</label>
                    <textarea name="ctl00$MainContent$MessageTextBox" rows="3" cols="3" id="MainContent_MessageTextBox" class="form-control" placeholder="Your Message goes here..." required="true"></textarea>
                    <span data-val-controltovalidate="MainContent_MessageTextBox" data-val-focusOnError="t" data-val-errormessage="A message is Required!" data-val-display="Dynamic" id="MainContent_RequiredFieldValidator5" class="alert-danger" data-val="true" data-val-evaluationfunction="RequiredFieldValidatorEvaluateIsValid" data-val-initialvalue="" style="display:none;">A message is Required!</span>
                </div>
                <div class="text-right">
                    <a class="btn btn-warning btn-lg" id="CancelButton" href="Default.aspx">Cancel</a>
                    <input type="submit" name="ctl00$MainContent$SendButton" value="Send" onclick="javascript:WebForm_DoPostBackWithOptions(new WebForm_PostBackOptions(&quot;ctl00$MainContent$SendButton&quot;, &quot;&quot;, true, &quot;&quot;, &quot;&quot;, false, false))" id="MainContent_SendButton" class="btn btn-primary btn-lg" />
                </div>
            </div>
        </div>
    </div>

</div>

